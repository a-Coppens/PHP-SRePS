<Window x:Class="PHP_SRePS.loginscreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PHP_SRePS"
        mc:Ignorable="d"
        Title="Login" Height="500" Width="500" FontSize="14" Background="Aquamarine">
    <Border Background="AliceBlue" CornerRadius="20" Margin="20">
        <StackPanel>
            <Label Content="Login" Foreground="Red" FontSize="25" HorizontalAlignment="Center"></Label>
            <Separator></Separator>

            <Label Content="Client ID" Foreground="Red" FontSize="15" Padding="20"></Label>

            <TextBox Name="txtID" Background="LightBlue" Foreground="Red" FontSize="18" Padding="10" Height="48" Margin="30,0,50.6,0"></TextBox>
            <Label Content="Password" Foreground="Red" FontSize="15" Padding="20" Margin="0,0,-0.4,0"/>
            <TextBox Name="txtpassword" Background="LightBlue" Foreground="Red" FontSize="18" Padding="10" Height="48" Margin="30,0,50.6,0"></TextBox>
            <Button x:Name="btnSubmit" Click="BtnSubmit_Click" HorizontalAlignment="Center" Content="Submit" Margin="117,10,132.6,10" Background="LightSkyBlue" Foreground="Red" Height="48" Width="204"/>
        </StackPanel>
    </Border>

</Window>
